parser: babel-eslint
parserOptions:
  ecmaVersion: 2019
env:
  browser: true
  jest: true
extends:
  - plugin:flowtype/recommended
  # - plugin:react/recommended
  - plugin:jsx-a11y/recommended
  - plugin:compat/recommended
  - prettier
  - prettier/babel
  - prettier/flowtype
  - prettier/react
plugins:
  - flowtype
  - import
  - react
  - react-hooks
  - jsx-a11y
  - compat
  - prettier
rules:
  compat/compat: 'error'
  prettier/prettier: 'error'
  react-hooks/rules-of-hooks: 'error'
